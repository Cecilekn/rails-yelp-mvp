<div class="container my-4">
  <h1><%= @restaurant.name %></h1>

  <ul>
    <li>Address: <%= @restaurant.address %></li>
    <li>Phone number: <%= @restaurant.phone_number %></li>
    <li>Category: <%= @restaurant.category %></li>
  </ul>

  <p>Reviews: <% @restaurant.reviews.each do |review| %></p>
  <ul>Note: <%= review.rating %> - <%= review.content %></ul>
  <% end %>

  <div class="container my-4">
    <h1>Enter a new review!</h1>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::RATES %>
      <%= f.submit "Create Review", class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to "Back", restaurants_path, class:"btn btn-primary" %>
</div>
